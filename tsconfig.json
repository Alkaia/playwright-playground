{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./out",
    "baseUrl": ".",
    "paths": {
      "pageObjects/*": [
        "./pageObjects/*"
      ],
      "tests/*": [
        "./tests/*"
      ],
      "config/*": [
        "./config/*"
      ],
    },
  },
  "include": [
    "test/**/*.ts",
    "config/playwright.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}