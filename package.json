{
	"name": "playwright-playground",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"test": "npx playwright test tests/e2e/",
		"test-ui": "npx playwright test tests/e2e/ --ui",
		"test:api": "npx playwright test tests/api/",
		"test:all": "npx playwright test",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write \"**/*.{ts,json,yaml,yml,md}\"",
		"format:check": "prettier --check \"**/*.{ts,json,yaml,yml,md}\"",
		"allure:generate": "allure generate allure-results --clean -o allure-report",
		"allure:open": "allure open allure-report",
		"allure:serve": "allure serve allure-results",
		"prepare": "husky"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@playwright/test": "^1.41.2",
		"@types/node": "^20.11.16",
		"prettier": "^3.2.5"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"allure-playwright": "^3.4.2",
		"dotenv": "^17.2.3",
		"eslint": "^9.39.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-playwright": "^2.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6"
	},
	"lint-staged": {
		"*.{ts,json,yaml,yml,md}": [
			"prettier --write"
		],
		"*.ts": [
			"eslint --fix"
		]
	}
}
